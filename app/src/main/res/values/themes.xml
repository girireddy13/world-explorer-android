<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- World Explorer Ocean Theme -->
    <style name="Theme.WorldExplorer" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/ocean_primary</item>
        <item name="colorPrimaryVariant">@color/ocean_primary_dark</item>
        <item name="colorOnPrimary">@color/text_on_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/ocean_secondary</item>
        <item name="colorSecondaryVariant">@color/ocean_accent</item>
        <item name="colorOnSecondary">@color/text_on_primary</item>
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_main</item>
        <item name="colorSurface">@color/card_background</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
    </style>
</resources>